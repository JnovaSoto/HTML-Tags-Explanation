<div class="container">
    <form action="post" method="post" id="login-form" required>

    <div class="mb-3">
        <label for="user" class="form-label">Username</label>
        <div class="form-text">
            <input type="text" name="user" class="form-control" id="login-input" placeholder="Enter your username" maxlength="20" required>
        </div>
    </div>
    <div class="mb-3">
        <label for="pass" class="form-label">Password</label>
        <div class="form-password">
            <input type="password" class="form-control" name="pass" id="pasword-input"  placeholder="Enter your password" required>
            <button type="button" class="form-password-action" data-coreui-toggle="password" aria-label="Toggle password visibility">
            <span class="form-password-action-icon"></span>
            </button>
        </div>
    </div>
    <input type="submit" value="Submit">
  </form>
</div>